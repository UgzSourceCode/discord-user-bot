{
  "name": "discord-record-bot",
  "version": "1.0.0",
  "description": "Basic bot for recording meetings",
  "main": "index.ts",
  "scripts": {
    "start": "ts-node ./src/index.ts | tee -a ./logs",
    "build": "tsc --build",
    "clean": "tsc --build --clean",
    "dev": "ts-node-dev --respawn ./src/index.ts  | tee -a ./logs",
    "test": "test"
  },
  "keywords": [
    "bot",
    "discord",
    "record",
    "OrderOfDevs"
  ],
  "author": "Piotr 'Ugz' Bielski",
  "license": "ISC",
  "devDependencies": {
    "dotenv": "16.4.5",
    "@types/node": "22.1.0",
    "@types/node-schedule": "2.1.7",
    "ts-node": "10.9.2",
    "ts-node-dev": "2.0.0",
    "typescript": "5.5.4"
  },
  "dependencies": {
    "discord.js": "13.6.0",
    "mailerlite-api-v2-node": "1.2.0",
    "node-schedule": "2.1.1",
    "pino": "7.8.0",
    "pino-pretty": "7.5.1",
    "pino-tee": "0.3.0"
  }
}
